@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html>
<head>
    <title>Abejitas citas</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <style>


        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            margin-top: 100px;
            background-color: rgba(255, 255, 255, 0.8);
            border-radius: 10px;
        }

            .container h1 {
                font-size: 24px;
                margin-bottom: 20px;
            }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

            table th, table td {
                padding: 10px;
                text-align: left;
                border-bottom: 1px solid #ffffff;
            }

            table th {
                background-color: #17a2b8 !important;
                color: #ffffff;
            }

            table tr:nth-child(even) {
                background-color: rgba(255, 255, 255, 0.4);
            }

            table tr:hover {
                background-color: rgba(255, 255, 255, 0.6);
            }
    </style>
</head>
<body>
    <div class="container">
        <h1>Abejitas Citas</h1>
        <table>
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Time</th>
                    <th>Pet Name</th>
                    <th>Owner</th>
                    <th style="text-align:center">Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>2023-07-10</td>
                    <td>10:00 AM</td>
                    <td>Max</td>
                    <td>John Doe</td>
                    <td style="text-align:center">
                        <div>
                            <button class="btn"><span class="material-symbols-outlined">edit</span></button>
                            <button class="btn"><span class="material-symbols-outlined">text_snippet</span></button>
                            <button class="btn"><span class="material-symbols-outlined">cancel</span></button>
                            <button class="btn"><span class="material-symbols-outlined">done</span></button>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>2023-07-12</td>
                    <td>2:30 PM</td>
                    <td>Bella</td>
                    <td>Jane Smith</td>
                    <td style="text-align:center">
                        <div>
                            <button class="btn"><span class="material-symbols-outlined">edit</span></button>
                            <button class="btn"><span class="material-symbols-outlined">text_snippet</span></button>
                            <button class="btn"><span class="material-symbols-outlined">cancel</span></button>
                            <button class="btn"><span class="material-symbols-outlined">done</span></button>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>2023-07-15</td>
                    <td>4:00 PM</td>
                    <td>Charlie</td>
                    <td>Michael Johnson</td>
                    <td style="text-align:center">
                        <div>
                            <button class="btn"><span class="material-symbols-outlined">edit</span></button>
                            <button class="btn"><span class="material-symbols-outlined">text_snippet</span></button>
                            <button class="btn"><span class="material-symbols-outlined">cancel</span></button>
                            <button class="btn"><span class="material-symbols-outlined">done</span></button>
                        </div>
                    </td>
                </tr>
                <!-- Agrega más filas según sea necesario -->
            </tbody>
        </table>
        <button type="button" class="btn btn-primary mt-4 AddButton" data-bs-toggle="modal" data-bs-target="#addAppointmentModal"><span class="material-symbols-outlined">add</span></button>

        <div class="modal fade" id="addAppointmentModal" tabindex="-1" aria-labelledby="addAppointmentModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="addAppointmentModalLabel">Agregar Cita</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">

                            <form>
                                <div class="mb-3">
                                    <label for="dateInput" class="form-label">Date</label>
                                    <input type="date" class="form-control" id="dateInput" required>
                                </div>
                                <div class="mb-3">
                                    <label for="timeInput" class="form-label">Time</label>
                                    <input type="time" class="form-control" id="timeInput" required>
                                </div>
                                <div class="mb-3">
                                    <label for="petInput" class="form-label">Pet Name</label>
                                    <input type="text" class="form-control" id="petInput" required>
                                </div>
                                <div class="mb-3">
                                    <label for="ownerInput" class="form-label">Owner</label>
                                    <input type="text" class="form-control" id="ownerInput" required>
                                </div>
                                <button type="submit" class="btn btn-primary">Agregar</button>
                            </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
