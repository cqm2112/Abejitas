@model IEnumerable<Abejitas.Models.Appointment>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<title>Abejitas citas</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
<style>


    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        margin-top: 100px;
        background-color: rgba(255, 255, 255, 0.8);
        border-radius: 10px;
    }
    a{
        text-decoration: none !important;
    }

        .container h1 {
            font-size: 24px;
            margin-bottom: 20px;
        }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

        table th, table td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #ffffff;
        }

        table th {
            background-color: #17a2b8 !important;
            color: #ffffff;
        }

        table tr:nth-child(even) {
            background-color: rgba(255, 255, 255, 0.4);
        }

        table tr:hover {
            background-color: rgba(255, 255, 255, 0.6);
        }
</style>

<div class="container">
    <h1>Abejitas Citas</h1>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Owner)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PetType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Date)
                </th>
                <th style="text-align:center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Owner)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PetType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id"><span class="material-symbols-outlined">edit</span></a> 
                        <a asp-action="Details" asp-route-id="@item.Id"><span class="material-symbols-outlined">text_snippet</span></a> 
                        <a asp-action="Delete" asp-route-id="@item.Id"><span class="material-symbols-outlined">cancel</span></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-action="Create" class="btn btn-primary mt-4 AddButton"><span class="material-symbols-outlined">add</span></a>
    @*<button type="button" asp-action="Create" class="btn btn-primary mt-4 AddButton" data-bs-toggle="modal" data-bs-target="#addAppointmentModal"><span class="material-symbols-outlined">add</span></button>*@
</div>